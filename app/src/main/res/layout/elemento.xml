<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/xnombre"
        android:id="@+id/tvNombre"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/xnumero"
        android:id="@+id/tvNumero"
        android:layout_below="@+id/tvNombre"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:id="@+id/ivMasOpciones"
        android:layout_alignParentEnd="true"
        android:src="@mipmap/ic_info_outline_black_24dp"
        android:visibility="visible"
        android:onClick="dialogo"
        android:baselineAlignBottom="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/tvNumero"
        android:padding="8dp" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:id="@+id/ivEditar"
        android:onClick="editar"
        android:src="@mipmap/ic_mode_edit_black_24dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/ivMasOpciones"
        android:layout_toStartOf="@+id/ivMasOpciones"
        android:layout_alignBottom="@+id/ivMasOpciones"
        android:padding="8dp" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:id="@+id/ivMenosOpciones"
        android:layout_alignParentTop="false"
        android:src="@mipmap/ic_remove_circle_black_24dp"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/tvNumero"
        android:layout_alignParentRight="true"
        android:visibility="invisible"
        android:onClick="dialogo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/xnumero"
        android:id="@+id/tvNumero1"
        android:layout_below="@+id/tvNumero"
        android:layout_centerHorizontal="true"
        android:visibility="gone" />
</RelativeLayout>